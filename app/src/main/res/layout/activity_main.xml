<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/lyt_empresa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_nombre_empresa"
            android:textAlignment="center"
            android:textColor="@color/fhtpciAzul"
            android:textSize="40sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/txtVersionApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="@color/fhtpciAzul"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/lyt_logos"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:textAlignment="center">


            <ImageView
                android:id="@+id/imageLogo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/content_desc_logo1"
                app:srcCompat="@mipmap/imagen01" />

            <ImageView
                android:id="@+id/imageLogo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/content_desc_logo2"
                app:srcCompat="@mipmap/imagen02" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_firma_acceso"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:textAlignment="center">

            <TextView
                android:id="@+id/textViewFirmaAcceso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="50dp"
                android:text="@string/txt_view_firma_acceso"
                android:textAlignment="center"
                android:textColor="@color/fhtpciLlama4"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/txtNombreUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="50dp"
                android:autofillHints="@string/edit_text_cve"
                android:ems="10"
                android:hint="@string/edit_text_ph_cve"
                android:inputType="text"
                android:maxWidth="320dp"
                android:text=""
                android:textAlignment="textStart"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txtPwdUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:autofillHints="@string/edit_text_pwd"
                android:ems="10"
                android:hint="@string/edit_text_ph_pwd"
                android:inputType="textPassword"
                android:maxWidth="320dp"
                android:text=""
                android:textAlignment="textStart"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnInicioSesion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:backgroundTint="@color/fhtpciAzul"
                android:maxWidth="320dp"
                android:text="@string/btn_text_inicio_sesion"
                android:textAlignment="center" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>